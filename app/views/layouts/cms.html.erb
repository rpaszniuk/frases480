<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title><%= cms_page_title_tag %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%#= stylesheet_link_tag 'cms', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'cms', 'data-turbolinks-track': 'reload' %>  
  <%= yield :extra_top_page %>
</head>
<body>
  <div id="wrapper">
    <nav class="navbar-default navbar-static-side" role="navigation">
      <div class="sidebar-collapse">
        <ul class="nav metismenu" id="side-menu">
          <li class="nav-header">
            <div class="dropdown profile-element">
              <img alt="image" class="img-circle" src="<%#= image_url @current_user.avatar.url(:small) %>" />
              <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                <span class="clear">
                  <span class="text-muted text-xs block"><strong class="font-bold"><%= @current_user.full_name %></strong> <b class="caret"></b></span>
                </span>
              </a>
              <ul class="dropdown-menu animated fadeInRight m-t-xs">
                <li><%= link_to 'My Profile', edit_cms_user_path(@current_user) %></li>
                <li class="divider"></li>
                <li><a href="<%= cms_sessions_logout_path %>">Logout</a></li>
              </ul>
            </div>
            <div class="logo-element">[ FRASES 480 ]</div>
          </li>
          <% cms_build_sidemenu do |menu| -%>
  				<li<%= %( class="active").html_safe if menu[:active] %>>
  					<% if menu[:submenu].empty? -%>
    					<%= link_to menu[:url] do %>
    						<i class="fa fa-<%= menu[:icon] %>"></i>
                <span class="nav-label"><%= menu[:label] %></span>
    					<% end %>
  					<% else -%>
              <% if menu[:thirdmenu].nil? -%>
      					<%= link_to menu[:url] do %>
      						<i class="fa fa-<%= menu[:icon] %>"></i>
                  <span class="nav-label"><%= menu[:label] %></span>
                  <span class="fa arrow"></span>
      					<% end %>
                <ul class="nav nav-second-level collapse">
      						<% for submenu in menu[:submenu].compact -%>
      						<li<%= %( class="active").html_safe if submenu[:active] %>><%= link_to submenu[:label], submenu[:url] %></li>
      						<% end -%>
                </ul>
              <% else -%>
                <%= link_to menu[:url] do %>
                  <i class="fa fa-<%= menu[:icon] %>"></i>
                  <span class="nav-label"><%= menu[:label] %></span>
                  <span class="fa arrow"></span>
                <% end %>
                <ul class="nav nav-second-level collapse">
                  <% for submenu in menu[:submenu].compact -%>
                  <li<%= %( class="active").html_safe if submenu[:active] %>>
                    <%= link_to "#{fa_icon(submenu[:icon])} #{submenu[:label]}".html_safe, submenu[:url] %>
                    <ul class="nav nav-third-level collapse">
                      <% for thirdmenu in submenu[:thirdmenu].compact -%>
                        <li<%= %( class="active").html_safe if thirdmenu[:active] %>><%= link_to thirdmenu[:label], thirdmenu[:url] %></li>
                      <% end -%>
                    </ul>
                  </li>
                  <% end -%>
                </ul>
              <% end -%>
  				  <% end -%>
  				</li>
          <% end -%>
        </ul>
      </div>
    </nav>
    <div id="page-wrapper" class="gray-bg">
      <div class="row border-bottom">
        <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
          <div class="navbar-header">
            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
            <form role="search" class="navbar-form-custom" method="post" action="">
              <div class="form-group">
                <input type="text" placeholder="Search for something..." class="form-control" name="top-search" id="top-search"/>
              </div>
            </form>
          </div>
          <ul class="nav navbar-top-links navbar-right">
            <li>
              <a href="<%= cms_sessions_logout_path %>"><i class="fa fa-sign-out"></i> Log out</a>
            </li>
          </ul>
        </nav>
      </div>
      <% if @page_title -%>
      <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
          <h2><%= @page_title %></h2>
          <%= render_cms_breadcrumbs %>
        </div>
      </div>
      <% end -%>
      <div class="footer">
        <div>
          <strong>Copyright</strong> Frases 480 &copy; <%= Time.now.year %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="cms_modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
      </div>
    </div>
  </div>
  <%= javascript_pack_tag 'cms', 'data-turbolinks-track': 'reload' %>
  <%= yield :extra_bottom_page %>
</body>
</html>
