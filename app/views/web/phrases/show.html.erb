<% if !@phrase.nil? %>
<% if @phrase.active? %>
<div class="card">
  <!-- Default panel contents -->
  <div class="card-header">Frase de <%= link_to @phrase.category.name, web_show_category_path(@phrase.category.slug) %></div>            
  <div class="card-body">   
    <h4><%= @phrase.phrase %></h4>
  </div>
  <div class="card-footer text-right">
    <div class="addthis_native_toolbox"></div>
  </div>    
</div> 
<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- Frases480-Adaptable2 -->
