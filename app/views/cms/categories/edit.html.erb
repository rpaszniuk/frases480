<div class="row">
  <div class="col-md-12">
    <h1 class="page-title">Editar Categoría</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="card">
      <%= form_for @category, url: cms_category_path(@category) do |form| %>
      <div class="card-header">Datos de la Categoría</div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">ID</label>
              <p class="form-control-static"><%= @category.id %></p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">Slug</label>
              <p class="form-control-static"><%= @category.slug %></p>
            </div>
          </div>
        </div>          
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">Nombre</label>
              <%= form.text_field :name, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">Descripción</label>
              <%= form.text_area :description, class: 'form-control', rows: 8 %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label class="control-label">Estado</label>
              <%= form.select :status, options_for_select(Category.statuses_map, selected: @category.status, disabled: ['deleted']), {}, class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer d-flex justify-content-between">
        <button class="btn btn-primary" type="submit" data-disable-with="<%= t('basic.forms.updating') %>"><%= t('basic.forms.submit_update') %></button>
        <%= link_to cms_delete_action_label(@category), cms_category_path(@category), method: :delete, data: { disable_with: t('basic.forms.deleting'), confirm: t('basic.forms.confirm') }, class: 'btn btn-danger' %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">Estado</div>
      <div class="card-body text-center">
        <h1 class="mt-3"><%= cms_object_status_label(@category) %></h1>
      </div>
    </div>
  </div>
</div>
