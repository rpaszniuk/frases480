<div class="row page-title-row">
  <div class="col">
    <h1>Lista de Categorías</h1>
  </div>
  <div class="col-auto">
    <div class="d-table h-100">
      <div class="d-table-cell align-middle">
        <%= link_to 'Crear Nuevo', :new_cms_category, class: 'btn btn-info' %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <%= form_tag :cms_categories, method: :get, class: 'form-horizontal' do |form| %>
      <div class="card-body">
        <%= text_field_tag :k, params[:k], class: 'form-control', placeholder: 'Buscar por Nombre' %>
      </div>
      <div class="card-footer">
        <button class="btn btn-sm btn-primary" type="submit" data-disable-with="<%= t('basic.forms.searching') %>"><%= t('basic.forms.submit_search') %></button>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% if !@categories.blank? && @categories.length > 0 -%>
    <table class="table table-responsive-sm table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Nombre</th>
          <th>Estado</th>
        </tr>
      </thead>
      <tbody>
        <% for category in @categories -%>
        <tr>
          <td><%= category.id %></td>
          <td><%= link_to category.name, edit_cms_category_path(category) %></td>
          <td><%= cms_object_status_label(category) %></td>
        </tr>
        <% end -%>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= will_paginate_cms(@categories) %>
    </div>
    <% else -%>
    <div class="alert alert-info" role="alert">No se han encontrado Categorías.</div>
    <% end -%>
  </div>
</div>
