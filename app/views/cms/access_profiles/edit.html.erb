<div class="row">
  <div class="col-md-12">
    <h1 class="page-title">Edit Access Profile</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="card">
      <%= form_for @access_profile, url: cms_access_profile_path(@access_profile) do |form| %>
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">Name</label>
              <%= form.text_field :name, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label class="control-label">Status</label>
              <%= form.select :status, options_for_select(AccessProfile.statuses_map, selected: @access_profile.status, disabled: ['deleted']), {}, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="row permissions-ui">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">Permissions</label>
              <div class="row">
                <div class="col-md-6">
                  <div class="namespace">Access Profiles</div>
                  <ul class="list-group">
                    <li class="list-group-item d-flex list-group-item-action justify-content-between align-items-center">
                      <strong>Full Access</strong>
                      <label class="switch switch-text switch-pill switch-danger-outline-alt">
                        <%= check_box_tag "access_profile[permissions][access_profiles][full_access]", 1, @access_profile.permissions.dig('access_profiles', 'full_access'), class: 'switch-input' %>
                        <span class="switch-label" data-on="Si" data-off="No"></span>
                        <span class="switch-handle"></span>
                      </label>
                    </li>
                  </ul>
                </div>
                <div class="col-md-6">
                  <div class="namespace">Users</div>
                  <ul class="list-group">
                    <li class="list-group-item d-flex list-group-item-action justify-content-between">
                      <strong>Full Access</strong>
                      <label class="switch switch-text switch-pill switch-danger-outline-alt">
                        <%= check_box_tag "access_profile[permissions][users][full_access]", 1, @access_profile.permissions.dig('users', 'full_access'), class: 'switch-input' %>
                        <span class="switch-label" data-on="Si" data-off="No"></span>
                        <span class="switch-handle"></span>
                      </label>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer d-flex justify-content-between">
        <button class="btn btn-primary" type="submit" data-disable-with="<%= t('basic.forms.updating') %>"><%= t('basic.forms.submit_update') %></button>
        <%= link_to delete_action_label(@access_profile), access_profile_path(@access_profile), method: :delete, data: { disable_with: t('basic.forms.deleting'), confirm: t('basic.forms.confirm') }, class: 'btn btn-danger' %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">Status</div>
      <div class="card-body text-center">
        <h1 class="mt-3"><%= object_status_label(@access_profile) %></h1>
      </div>
    </div>
  </div>
</div>
