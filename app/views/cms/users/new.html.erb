<div class='row'>
  <div class='col-md-12'>
    <h1 class='page-title'>New User
    </h1>
  </div>
</div>
<div class='row'>
  <div class='col-md-8'>
    <div class='card'>
      <%= form_for @user do |form| %>
        <div class='card-header'>
          User Information
        </div>
        <div class='card-body'>
              <div class='form-group'>
                <%= form.label :first_name, class: 'col-form-label control-label required' %>
                <%= form.text_field :first_name, 
                  class: 'form-control'
                %>
                </div>
              <hr>
              <div class='form-group'>
                <%= form.label :last_name, class: 'col-form-label control-label required' %>
                <%= form.text_field :last_name, 
                  class: 'form-control'
                %>
              </div>
              <hr>
              <div class='form-group'>
                <%= form.label :email, class: 'col-form-label control-label required' %>
                <%= form.email_field :email, class: 'form-control' %>
              </div>
              <hr>
              <div class='form-group'>
                <%= form.label :password, class: 'col-form-label control-label required' %>
                <%= form.password_field :password,  class: 'form-control' %>
              </div>
              <hr>
              <div class='form-group'>
                <%= form.label :access_profile_id, class: 'col-form-label control-label required' %>
                <%= form.select :access_profile_id, options_for_select(@access_profiles_dropdown_menu_options, selected: @user.access_profile_id, disabled: @access_profiles_disabled_ids), { include_blank: true }, class: 'form-control' %>
              </div>
        </div>
        <div class='card-footer d-flex justify-content-between'>
          <button class='btn btn-primary' type='submit' data-disable-with="<%= t('basic.forms.updating') %>">
            <%= t('basic.forms.submit_update') %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
  <div class='col-md-4'>
    <div class='card'>
      <div class='card-header'>Status</div>
      <div class='card-body text-center'>
        <h1 class='mt-3'><%= object_status_label(@user) %></h1>
      </div>
    </div>
  </div>
</div>
