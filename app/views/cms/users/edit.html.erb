<div class="row">
  <div class="col-md-12">
    <h1 class="page-title">Edit User</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="card">
      <%= form_for @user, url: user_path(@user) do |form| %>
      <div class="card-header">User Information</div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">ID</label>
              <p class="form-control-static"><%= @user.id %></p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">First Name</label>
              <%= form.text_field :first_name, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">Last Name</label>
              <%= form.text_field :last_name, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">Email</label>
              <%= form.text_field :email, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label class="control-label">Access Profile</label>
              <%= form.select :access_profile_id, options_for_select(AccessProfile.dropdown_menu_options, selected: @user.access_profile_id, disabled: AccessProfile.deleted.collect(&:id)), { include_blank: true }, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label class="control-label">Status</label>
              <%= form.select :status, options_for_select(User.statuses_map, selected: @user.status, disabled: ['deleted']), {}, class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer d-flex justify-content-between">
        <button class="btn btn-primary" type="submit" data-disable-with="<%= t('basic.forms.updating') %>"><%= t('basic.forms.submit_update') %></button>
        <%= link_to delete_action_label(@user), user_path(@user), method: :delete, data: { disable_with: t('basic.forms.deleting'), confirm: t('basic.forms.confirm') }, class: 'btn btn-danger' %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">Status</div>
      <div class="card-body text-center">
        <h1 class="mt-3"><%= object_status_label(@user) %></h1>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="card">
      <%= form_for @user, url: user_path(@user) do |form| %>
      <div class="card-header">Password</div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">New Password</label>
              <%= form.text_field :password, class: 'form-control', value: '' %>
            </div>
          </div>
        </div>
        <button class="btn btn-primary" type="submit" data-disable-with="<%= t('basic.forms.updating') %>">Update Password</button>
      </div>
      <% end %>
    </div>
  </div>
</div>
